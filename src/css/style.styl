@import "./reset.css"
@import "./404.css"

*
  box-sizing border-box
  transition all 0.4s

div.quote
  padding 20px

a 
  display block
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  cursor pointer
  text-decoration none
  /* transition all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms */

.home 
  margin 0
  padding 0
  color white
  min-height 90%
  min-height calc(100% - 20px)
  text-align center

p.quote
  font-size 180%
  padding 10px
  padding-top 60px

h3.author
  font-size 140%
  padding-top 60px

small.category
  font-size 80%
  padding 60px 60px 0

button.selector 
  color white
  background-color rgba(255,255,255,.3)
  border none
  cursor pointer
  width 96%
  margin 0 0.25%
  font-weight 700
  border-radius 3px
  padding 2em 1em
  text-transform uppercase
  text-shadow black 1px 1px

@media all and (min-width 767px)
  p.quote
    font-size 200%
    padding 80px 100px 60px
  h3.author
    font-size 160%
  small.category
    padding 40px
